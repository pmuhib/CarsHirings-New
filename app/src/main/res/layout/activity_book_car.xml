<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.carshiring.activities.home.BookCarActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/qoutesbottom">
        <LinearLayout
            android:id="@+id/linear_uper"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:paddingBottom="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                style="@style/simpleRectangle">
                <TextView
                    android:id="@+id/txt_modelname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Toyota Innova Diesel"
                    android:gravity="center"
                    android:textColor="@color/bottom_color"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="or Similar"
                    android:gravity="center"
                    android:textColor="@color/black"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="1dp"
                    android:background="@color/Light_grey"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/img_car"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:src="@drawable/ic_car_img"

                        />
                    <TextView
                        android:id="@+id/txt_carPrice"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom|start"
                        android:background="@color/bottom_color"
                        android:textColor="#fff"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:text="INR 5,540.64"
                        android:textStyle="bold"
                        android:gravity="left|center|top"
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:id="@+id/txtpoint_cal"
                        android:textColor="@color/black"
                        android:layout_gravity="bottom|start"
                        android:gravity="bottom"
                        android:text="Points Collected:" />
                    <LinearLayout
                        android:layout_width="82dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_gravity="bottom|end"
                        >
                        <ImageView
                            android:id="@+id/img_carlogo"
                            android:layout_width="82dp"
                            android:layout_height="54dp"
                            android:src="@drawable/ic_brand_logo"/>
                    </LinearLayout>

                    <ProgressBar
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/progressbar"/>
                    <ProgressBar
                        android:visibility="gone"
                        android:layout_marginRight="15dp"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end|center"
                        android:id="@+id/progressbar1"/>
                </FrameLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:layout_weight="0.50">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_excellentvalue"
                                />
                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:layout_marginLeft="5dp"
                                android:text="Execellent Value" />
                        </LinearLayout>
                    </FrameLayout>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/Light_grey"
                        />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_gravity="center"
                        android:layout_weight="0.50">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_greentick"
                                />
                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="12sp"
                                android:layout_marginLeft="5dp"
                                android:text="Free Cancellation"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/Light_grey"/>
                <FrameLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_additional_driver"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="5dp"
                            android:text="First Additional Driver Included" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terms and Conditions"
                android:gravity="center"
                android:textColor="@color/bottom_color"
                android:textStyle="bold"
                android:textSize="15sp"
                android:padding="2dp"
                android:layout_marginTop="12dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Light_grey"
                android:layout_marginTop="4dp"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/txt_savequote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save and Quote"
                android:gravity="center"
                android:textColor="@color/bottom_color"
                android:textStyle="bold"
                android:textSize="15sp"
                android:padding="2dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/txt_full_prote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fullly Protected"
                android:gravity="center"
                android:textColor="@color/bottom_color"
                android:textStyle="bold"
                android:textSize="15sp"
                android:visibility="gone"
                android:padding="2dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/txt_full_prote_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Protected"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/extra_small_size"
                android:visibility="gone"
                android:padding="2dp"
                android:layout_marginTop="5dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Light_grey"
                android:layout_marginTop="4dp"/>


            <TextView
                android:id="@+id/txt_additional_extra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Additional Extras"
                android:gravity="center"
                android:textColor="@color/bottom_color"
                android:textStyle="bold"
                android:textSize="15sp"
                android:visibility="gone"
                android:padding="2dp"
                android:layout_marginTop="5dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Light_grey"
                android:layout_marginTop="4dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/extraadded_view"
                android:orientation="vertical">


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/qoutesbottom"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">
        <include layout="@layout/bottom_toolbar"
            ></include></LinearLayout>

</RelativeLayout>
